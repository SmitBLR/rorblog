<% if @comment.errors.empty? %>
    $("#comment_list").append("<%= escape_javascript(render "comments/show", :comment => @comment) %>");
    var comment_div = $("#<%= dom_id @comment %>");
    comment_div.hide().slideToggle("slow");
    <% @comment = @comment.commentable.comments.build %>
<% end %>
$("#comment_form").html("<%= escape_javascript(render "comments/form", :comment => @comment) %>");
