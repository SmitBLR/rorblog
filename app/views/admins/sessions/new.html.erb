<div class="postwrap fix">
  <div class="post-25 page type-page status-publish hentry">
    <div class="copy fix">
      <div class="field"><h2>Sign in</h2></div>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <div class="errors">
            <% if resource.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(resource.errors.count, "error") %> errors:</h2>
                  <ul>
                    <% resource.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>
          </div>
        <div class="field"><%= f.label :email %><br /><%= f.email_field :email %></div>
        <div class="field"><%= f.label :password %><br /><%= f.password_field :password %></div>
        <% if devise_mapping.rememberable? -%>
          <div class="field"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end %>
        <div class="field"><%= f.submit "Sign in" %></div>
      <% end %>
      <div class="field"><%= render :partial => "devise/shared/links" %></div>
    </div>
  </div>
</div>